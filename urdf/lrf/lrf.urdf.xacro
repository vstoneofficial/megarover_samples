<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find megarover_samples)/urdf/common.xacro"/>
  <xacro:include filename="$(find megarover_samples)/urdf/lrf/lrf.gazebo.xacro"/>

  <xacro:macro name="lrf_v0" params="prefix parent *joint_origin">
    <joint name="${prefix}_lrf_joint" type="fixed">
      <insert_block name="joint_origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}_lrf_link"/>
    </joint>

    <link name="${prefix}_lrf_link">
      <visual>
        <geometry>
          <mesh filename="package://megarover_samples/meshes/dae/lrf.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://megarover_samples/meshes/stl/lrf.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0"/>
        <box_inertial mass="0.218" height="0.07" width="0.05" depth="0.05"/>
      </inertial>
    </link>
  </xacro:macro>		

</robot>
